{
    "required_api_version": "^2.0.0",
    "name": "Dummy mail aliases",
    "description": "Generate aliases with a predefined base for testing",
    "developer_name": "Thomas Lys",
    "icon": "images/email_icon.svg",
    "options": {
        "query_debounce": 0.1
    },
    "preferences": [
        {
            "id": "kw_next",
            "type": "keyword",
            "name": "Dummy Mail Aliases",
            "description": "Generate new alias",
            "default_value": "dmn"
        },
        {
            "id": "kw_current",
            "type": "keyword",
            "name": "Dummy Mail Aliases",
            "description": "Get current alias",
            "default_value": "dmc"
        },
        {
            "id": "dummymail_base",
            "type": "input",
            "name": "Base",
            "description": "Dummy mail base. E.g email in <email>+ext@domain.tld",
            "default_value": "email"
        },
        {
            "id": "dummymail_ext",
            "type": "input",
            "name": "Extension",
            "description": "Dummy mail extension. E.g ext n email+<ext>@domain.tld",
            "default_value": "ext"
        },
        {
            "id": "dummymail_domain",
            "type": "input",
            "name": "Domain",
            "description": "Dummy mail domain. E.g domain.tld n email+ext@<domain.tld>",
            "default_value": "domain.tld"
        }
    ]
}
